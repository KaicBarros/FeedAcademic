@model IEnumerable<Model.Models.Turma>

@{
    ViewBag.Title = "Listar";
}

<h2>Listar</h2>

<p>
    @Html.ActionLink("Criar Nova", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeTurma)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailProfessor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomeTurma)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailProfessor)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new {  id=item.Codigo }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Codigo }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.Codigo })
        </td>
    </tr>
}

</table>
